<UserControl x:Class="Assignment_WpfApp.Views.UserAddView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Assignment_WpfApp.Views"
             xmlns:viewmodels="clr-namespace:Assignment_WpfApp.ViewModels"
             xmlns:models="clr-namespace:Business_Library.Models;assembly=Business_Library"
             d:DataContext="{d:DesignInstance Type=viewmodels:UserAddViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="400">
    <!-- Border for Rounded Corners -->
    <Border Padding="20" Margin="20" Background="White" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <TextBlock Grid.Row="0" Text="New User" FontSize="24" FontWeight="Bold" Margin="0,0,0,10" />

            <!-- Input Fields Section -->
            <StackPanel Grid.Row="1" Margin="0,10,0,0">
                <TextBlock Text="First Name" FontWeight="Bold" />
                <TextBox Text="{Binding User.Name, UpdateSourceTrigger=PropertyChanged}"  Margin="0,0,0,10" Padding="4" />

                <TextBlock Text="Surname" FontWeight="Bold" />
                <TextBox Text="{Binding User.Surname}" Margin="0,0,0,10" Padding="4" />

                <TextBlock Text="Email" FontWeight="Bold" />
                <TextBox Text="{Binding User.Email}" Margin="0,0,0,10" Padding="4" />

                <TextBlock Text="Mobile" FontWeight="Bold" />
                <TextBox Text="{Binding User.Mobile}" Margin="0,0,0,10" Padding="4" />

                <TextBlock Text="Address" FontWeight="Bold" />
                <TextBox Text="{Binding User.Address}" Margin="0,0,0,10" Padding="4" />

                <TextBlock Text="Post Number" FontWeight="Bold" />
                <TextBox Text="{Binding User.PostNumber}" Margin="0,0,0,10" Padding="4" />

                <TextBlock Text="City" FontWeight="Bold" />
                <TextBox Text="{Binding User.City}" Margin="0,0,0,10" Padding="4" />
            </StackPanel>

            <!-- Action Buttons Section -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <!-- Save Button -->
                <Button Content="Save"
                        Command="{Binding SaveCommand}"
                        Width="100"
                        Padding="5"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Margin="0,0,10,0" />

                <!-- Cancel Button -->
                <Button Content="Cancel"
                        Command="{Binding CancelCommand}"
                        Width="100"
                        Padding="5"
                        Background="#F44336"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

