<UserControl x:Class="Assignment_WpfApp.Views.UserEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Assignment_WpfApp.Views"
             xmlns:viewmodels="clr-namespace:Assignment_WpfApp.ViewModels"
             xmlns:models="clr-namespace:Business_Library.Models;assembly=Business_Library"
             
             Background="White"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="400">
    <Grid Margin="20">
        <Border Padding="20" Background="White" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Header Section -->
                <TextBlock Grid.Row="0"
                           Text="Edit User"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,0,0,20" />

                <!-- Input Fields Section -->
                <StackPanel Grid.Row="1" Margin="0,0,0,20">
                    <TextBlock Text="First Name" FontWeight="Bold" />
                    <TextBox Text="{Binding User.Name}" Margin="0,0,0,10" Padding="5" />

                    <TextBlock Text="Surname" FontWeight="Bold" />
                    <TextBox Text="{Binding User.Surname}" Margin="0,0,0,10" Padding="5" />

                    <TextBlock Text="Email" FontWeight="Bold" />
                    <TextBox Text="{Binding User.Email}" Margin="0,0,0,10" Padding="5" />

                    <TextBlock Text="Mobile" FontWeight="Bold" />
                    <TextBox Text="{Binding User.Mobile}" Margin="0,0,0,10" Padding="5" />

                    <TextBlock Text="Address" FontWeight="Bold" />
                    <TextBox Text="{Binding User.Address}" Margin="0,0,0,10" Padding="5" />

                    <TextBlock Text="Post Number" FontWeight="Bold" />
                    <TextBox Text="{Binding User.PostNumber}" Margin="0,0,0,10" Padding="5" />

                    <TextBlock Text="City" FontWeight="Bold" />
                    <TextBox Text="{Binding User.City}" Margin="0,0,0,10" Padding="5" />
                </StackPanel>

                <!-- Action Buttons Section -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Save Button -->
                    <Button Content="Save"
                            Command="{Binding SaveCommand}"
                            Width="100"
                            Background="#4CAF50"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Margin="0,0,10,0"
                            Padding="5" />

                    <!-- Cancel Button -->
                    <Button Content="Cancel"
                            Command="{Binding CancelCommand}"
                            Width="100"
                            Background="#F44336"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Padding="5" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
