<UserControl x:Class="Graphic_App.Views.UserListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Graphic_App.Views"
             xmlns:viewmodels="clr-namespace:Graphic_App.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:UserListViewModel}"
             mc:Ignorable="d"
             Background="#F5F5F5"
             d:DesignHeight="550"
             d:DesignWidth="300">

    <!-- Border for Rounded Corners -->
    <Border Padding="20"
            Margin="20"
            Background="White"
            CornerRadius="10"
            BorderBrush="#DDD"
            BorderThickness="1">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="User List"
                           FontSize="24"
                           FontWeight="Bold"
                           VerticalAlignment="Center" />

                <Button Grid.Column="1"
                        Command="{Binding GoToAddViewCommand}"
                        Content="&#xE710;"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="24"
                        Width="50"
                        Height="50"
                        Background="#4CAF50"
                        Foreground="White"
                        Padding="5"
                        BorderThickness="0"
                        Cursor="Hand"
                        ToolTip="Add New User"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#4CAF50" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Opacity" Value="1" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Ellipse Fill="{TemplateBinding Background}" />
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center" />
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#45A049" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Opacity" Value="0.8" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- ListView Section -->
            <ListView Grid.Row="1"
                      ItemsSource="{Binding Users}"
                      Margin="0,20,0,0"
                      HorizontalContentAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate DataType="models:User">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding DisplayName}"
                                           FontSize="14"
                                           FontWeight="Bold" />
                                <TextBlock Text="{Binding Email}"
                                           FontSize="12"
                                           Foreground="Gray" />
                            </StackPanel>

                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right">

                                <!-- Details Button -->
                                <Button Command="{Binding DataContext.GoToDetailsViewCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Content="&#xE720;"
                                        FontFamily="Segoe MDL2 Assets"
                                        FontSize="18"
                                        Width="40"
                                        Height="40"
                                        Background="#2196F3"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        ToolTip="View Details"
                                        Margin="0,0,10,0" />

                                <!-- Delete Button -->
                                <Button Content="&#xE712;"
                                        FontFamily="Segoe MDL2 Assets"
                                        FontSize="18"
                                        Width="40"
                                        Height="40"
                                        Background="Transparent"
                                        Foreground="Red"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        ToolTip="Delete User" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Border>
</UserControl>
