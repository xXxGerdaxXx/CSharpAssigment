                <DataTemplate DataType="{x:Type viewmodels:UserDetailsViewModel}">
                    <views:UserDetailsView />
                </DataTemplate>

                <DataTemplate DataType="{x:Type viewmodels:UserEditViewModel}">
                    <views:UserEditView />
                </DataTemplate>-->

